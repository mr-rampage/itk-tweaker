<StackPanel x:Class="Itk.Tweaker.Ui.Components.SourceNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Orientation="Horizontal">
    <Button Click="SetSelectedFolder">
        <materialDesign:PackIcon Kind="FolderImage" Height="24" Width="24" />
    </Button>
    <Button VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        <materialDesign:PackIcon Kind="Plus" />
    </Button>
</StackPanel>
